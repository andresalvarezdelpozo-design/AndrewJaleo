  <h1 id="tituloGaleria">Galería</h1>
  <div class="galeria">
    <img id="imagen" class="imagen" src="" alt="Obra">
    <a href="galeria.html" class="flecha izq">‹</a>
    <a href="galeria.html" class="flecha der">›</a>
  </div>
  <div id="texto" class="texto"></div>

  <script>
    const obras = [
      // Ejemplo: 8 galerías × 10 obras
      { titulo: "Obra 1", imagen: "https://i.imgur.com/1.jpg", medidas: "100×150 cm", texto: "Descripción de la obra 1" },
      { titulo: "Obra 2", imagen: "https://i.imgur.com/2.jpg", medidas: "80×120 cm", texto: "Descripción de la obra 2" },
      // ... (80 obras en total)
    ];

    let indice = 0;
    let galeriaActual = parseInt(localStorage.getItem("galeriaActual")) || 0;
    const inicio = galeriaActual * 10;
    const fin = inicio + 10;

    function cambiarImagen(direccion) {
      indice += direccion;
      if (indice < 0) indice = 9;
      if (indice > 9) indice = 0;
      mostrarObra();
    }

    function mostrarObra() {
      const obra = obras[inicio + indice];
      document.getElementById("imagen").src = obra.imagen;
      document.getElementById("texto").innerHTML = `
        <strong>${obra.titulo}</strong><br>
        Medidas: ${obra.medidas}<br>
        ${obra.texto}
      `;
    }

    mostrarObra();
  </script>
