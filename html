    .imagen { width: 100%; border-radius: 12px; }
    .flechas { position: absolute; top: 50%; transform: translateY(-50%); background: rgba(0,0,0,.5); color: white; border: none; padding: 1rem; font-size: 2rem; cursor: pointer; }
    .izq { left: 10px; }
    .der { right: 10px; }
    .texto { margin-top: 1rem; font-size: 1.1rem; }
    a.flecha { position: absolute; top: 50%; transform: translateY(-50%); background: rgba(0,0,0,.5); color: white; border: none; padding: 1rem; font-size: 2rem; cursor: pointer; text-decoration: none; }
